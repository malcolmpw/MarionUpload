<UserControl x:Class="MarionUpload.Views.vwUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Import UnitProperty" Command="{Binding CommandImportUnitProperty}"   IsEnabled="{Binding UnitImportEnabled}"                 
                                Margin="10" Width="200" Height="30" HorizontalAlignment="Left"/>
                <Button Content="Upload UnitProperty" Command="{Binding CommandUploadUnitProperty}"  IsEnabled="{Binding UnitUploadEnabled}"                     
                                Margin="10" Width="200" Height="30" HorizontalAlignment="Left"/>
                <TextBlock Text="{Binding MarionProperties.Count}" 
                                Margin="10" Width="200" Height="30" HorizontalAlignment="Left"/>
            </StackPanel>
            <DataGrid Name="dgUnitProperty" Margin="10" Width="1400" Height="700" HorizontalAlignment="Left"
                            ItemsSource="{Binding MarionProperties}">
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
