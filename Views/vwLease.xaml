<UserControl x:Class="MarionUpload.Views.vwLease"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Import Leases" Command="{Binding CommandImportLeases}"   IsEnabled="{Binding LeaseImportEnabled}"                 
                                Margin="10" Width="200" Height="30" HorizontalAlignment="Left"/>
                <Button Content="Upload Leases and Tracts" Command="{Binding CommandUploadLeases}"  IsEnabled="{Binding LeaseUploadEnabled}"                     
                                Margin="10" Width="200" Height="30" HorizontalAlignment="Left"/>
            </StackPanel>
            <DataGrid Name="dgLeases" Margin="10" Width="1400" Height="800" HorizontalAlignment="Left"
                            ItemsSource="{Binding MarionLeases}">
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
