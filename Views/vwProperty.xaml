<UserControl x:Class="MarionUpload.Views.vwProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Import Property" Command="{Binding CommandImportProperty}" 
                            Margin="10" Width="200" Height="30" HorizontalAlignment="Left"/>
                <Button Content="Upload Property" Command="{Binding CommandUploadProperty}" 
                            Margin="10" Width="200" Height="30" HorizontalAlignment="Left"/>
            </StackPanel>
            <DataGrid Name="dgProperty" Margin="10" Width="600" Height="300" HorizontalAlignment="Left"
                      ItemsSource="{Binding Property}">
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
